<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="top"
    android:orientation="vertical" >

    <Button
        android:id="@+id/quitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/viewStatsButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/viewStatsButton"
        android:layout_marginBottom="14dp"
        android:text="Quit"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:fitsSystemWindows="true"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/paper" />

    <ImageView
        android:id="@+id/opponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:fitsSystemWindows="true"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/scissor" />

    <TextView
        android:id="@+id/opponentname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/selfname"
        android:layout_alignBottom="@+id/selfname"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/selfname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/self"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/finalResult"
        android:text="You"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/finalResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opponentname"
        android:layout_centerHorizontal="true"
        android:text="You ---"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <Button
        android:id="@+id/playAgainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/highScoresButton"
        android:layout_alignLeft="@+id/highScoresButton"
        android:layout_alignRight="@+id/highScoresButton"
        android:layout_marginBottom="14dp"
        android:text="Play Again"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/viewStatsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/quitButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:text="View Statistics"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/highScoresButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewStatsButton"
        android:layout_alignLeft="@+id/viewStatsButton"
        android:layout_alignRight="@+id/viewStatsButton"
        android:layout_marginBottom="20dp"
        android:text="Leaderboard"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>